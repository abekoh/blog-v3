---
import { AstroComponentFactory } from "astro";
import DateInfo from "@/components/DateInfo.astro";
interface Props {
  title: string;
  publishedAt: Date;
  modifiedAt: Date | undefined;
  // summary: string;
  // tags: {
  //     name: string;
  //     href: string;
  // }[];
  Content: AstroComponentFactory;
}

const { title, publishedAt, modifiedAt, Content } = Astro.props;
---

<article>
  <div class="space-y-1 py-6">
    <DateInfo publishedAt={publishedAt} modifiedAt={modifiedAt} />
    <h1 class="text-lg font-bold text-gray-900 leading-relaxed">{title}</h1>
    <div class="post-content">
      <Content />
    </div>
  </div>
  <style is:global>
    .post-content {
      @apply leading-relaxed;
    }

    .post-content h2 {
      @apply text-lg font-semibold text-gray-900 leading-relaxed py-1;
    }

    .post-content h3 {
      @apply text-base font-medium text-gray-900 leading-relaxed py-1;
    }

    .post-content p {
      @apply text-base text-gray-700 leading-relaxed py-1;
    }

    .post-content a {
      @apply text-base text-blue-500 leading-relaxed hover:underline;
    }

    .post-content ul {
      @apply pl-6 list-disc list-outside leading-relaxed;
    }

    .post-content pre {
      @apply p-2 rounded;
    }

    /* use github-light https://github.com/shikijs/shiki/blob/1706cb82deac8d88a2dc60c099b6cf92e42b76f4/packages/shiki/themes/github-light.json  */
    .post-content code {
      @apply p-0.5 text-[#e1e4e8] bg-[#24292e] rounded;
    }
  </style>
</article>
